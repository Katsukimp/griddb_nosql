print('{:=^34}'.format('NÚMERO PRIMO'))
print('Informe um número :')
numero = int(input())
aux = numero
cont = 0
for c in range(1, aux + 1):
    if aux % c == 0:
        cont += 1
if cont == 2:
    print(f'O número {numero} é primo.')
else:
    print(f'O número {numero} não é primo.')
print('=' * 34)

# Fim do codigo
print()

print('{:=^34}'.format('NÚMERO PERFEITO'))
print('Informe um número :')
numero = int(input())
aux = numero
soma = 0
for c in range(1,aux):
    if aux % c == 0:
        soma += c
if soma == numero:
    print(f'O número {numero} é perfeito.')
else:
    print(f'O número {numero} não é perfeito.')
print('=' * 34)

# Fim do codigo
print()

print('{:=^34}'.format('NÚMERO ABUNDANTE'))
print('Informe um número :')
numero = int(input())
aux = numero
soma = 0
for c in range(1,aux):
    if aux % c == 0:
        soma += c
if soma > numero:
    print(f'O número {numero} é abundante.')
else:
    print(f'O número {numero} não é abundante.')
print('=' * 34)

